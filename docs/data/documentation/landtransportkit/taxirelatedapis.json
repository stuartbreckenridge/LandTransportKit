ivate var stands: [TaxiStand] = []","    @State private var isLoading = false","    @State private var showStands = true","    @State private var showTaxis = true","    ","    @State private var position = MapCameraPosition.region(","        MKCoordinateRegion(","            center: CLLocationCoordinate2D(latitude: 1.2903, longitude: 103.8520),","            span: MKCoordinateSpan(latitudeDelta: 0.02, longitudeDelta: 0.02)","        )","    )","    ","    var body: some View {","        Map(position: $position) {","            if showTaxis {","                ForEach(taxis, id: \\.id) { taxi in","                    Marker(\"Available Taxi\", systemImage: \"car.fill\", coordinate: taxi.coordinate2D)","                        .tint(.yellow)","                }","            }","            ","            if showStands {","                ForEach(stands, id: \\.id) { stand in","                    Marker(stand.Name, systemImage: \"mappin\", coordinate: stand.coordinate2D)","                        .tint(.blue)","                }","            }","        }","        .overlay(alignment: .topTrailing) {","            VStack {","                Toggle(\"Taxis\", isOn: $showTaxis)","                Toggle(\"Stands\", isOn: $showStands)","            }","            .padding()","            .background(.regularMaterial)","            .clipShape(RoundedRectangle(cornerRadius: 12))","            .padding()","        }","        .overlay(alignment: .bottom) {","            HStack {","                Label(\"\\(taxis.count) taxis\", systemImage: \"car.fill\")","                Spacer()","                Label(\"\\(stands.count) stands\", systemImage: \"mappin\")","            }","            .padding()","            .background(.regularMaterial)","        }","        .task {","            await loadData()","        }","        .refreshable {","            await loadData()","        }","    }","    ","    private func loadData() async {","        isLoading = true","        defer { isLoading = false }","        ","        async let taxiTask = LandTransportAPI.shared.downloadTaxiAvailability()","        async let standsTask = LandTransportAPI.shared.downloadTaxiStands()","        ","        do {","            let (loadedTaxis, loadedStands) = try await (taxiTask, standsTask)","            taxis = loadedTaxis","            stands = loadedStands","        } catch {","            print(\"Error: \\(error)\")","        }","    }","}"],"syntax":"swift"}]}],"kind":"article","schemaVersion":{"major":0,"minor":3,"patch":0},"abstract":[{"type":"text","text":"Access real-time taxi availability and taxi stand locations."}],"identifier":{"url":"doc:\/\/LandTransportKit\/documentation\/LandTransportKit\/TaxiRelatedAPIs","interfaceLanguage":"swift"},"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/landtransportkit\/taxirelatedapis"]}],"references":{"doc://LandTransportKit/documentation/LandTransportKit/TaxiAvailability":{"navigatorTitle":[{"text":"TaxiAvailability","kind":"identifier"}],"title":"TaxiAvailability","role":"symbol","kind":"symbol","url":"\/documentation\/landtransportkit\/taxiavailability","fragments":[{"kind":"keyword","text":"struct"},{"text":" ","kind":"text"},{"text":"TaxiAvailability","kind":"identifier"}],"abstract":[{"type":"text","text":"A structure representing the availability and location of a single taxi."}],"identifier":"doc:\/\/LandTransportKit\/documentation\/LandTransportKit\/TaxiAvailability","type":"topic"},"doc://LandTransportKit/documentation/LandTransportKit":{"type":"topic","kind":"symbol","identifier":"doc:\/\/LandTransportKit\/documentation\/LandTransportKit","title":"LandTransportKit","abstract":[{"text":"A Swift package for accessing real-time and static data from Singapore’s Land Transport Authority (LTA) DataMall API.","type":"text"}],"url":"\/documentation\/landtransportkit","images":[{"identifier":"LTK-Red.png","type":"icon"}],"role":"collection"},"doc://LandTransportKit/document